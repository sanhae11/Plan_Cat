<?xml version="1.0" encoding="utf-8"?>
<!-- 고양이 화면 -->
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <!-- 좌측 상단에 코인 배치 -->
    // 이미지나 사이즈, 간격 봐가면서 수정하기
    // 배경에 글자 안 보일 거 생각해서 저거 감싸는 둥근 네모 하든지.. 텍스트에 테두리 싸든지..
    <!-- TODO:네 개 버튼 floating bar로 합치기 -->
    <!-- TODO:화면 구성 등 기타 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        // Silver Coin
        <ImageView
            android:id="@+id/ic_silvercoin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_silvercoin" />

        <TextView
            android:id="@+id/txt_silvercoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="11dp"
            android:text="13120"
            android:textSize="17dp"
            android:textStyle="bold" />

        // Gold Coin
        <ImageView
            android:id="@+id/ic_goldcoin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_goldcoin" />

        <TextView
            android:id="@+id/txt_goldcoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="11dp"
            android:text="40"
            android:textSize="17dp"
            android:textStyle="bold" />

        // 리니어레이아웃에서 오른쪽 정렬
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- 우측 상단에 알림함 배치 -->
        // 포인트 보상 확인하는 알림모음 클릭시 보상받기
        <ImageView
            android:id="@+id/ic_msg"
            android:src="@drawable/icon_msg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:onClick="onClickButton" />
    </LinearLayout>

    // Fab menu button
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Floating Button"
            android:layout_centerInParent="true"
            android:textSize="28sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorBlack" />

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="74dp"
        app:fabSize="normal"
        app:backgroundTint="@color/colorPrimary"
        app:elevation="6dp"
        android:src="@drawable/icon_fab" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_cat_book"
        android:text="cat book"/>

    <!-- my things 버튼 -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_my_things"
        android:text="my things"/>

    <!-- shop 버튼 -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_shop"
        android:text="shop"/>

    <!-- 설정 버튼 -->
    <Button
        android:id="@+id/btn_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="settings" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>