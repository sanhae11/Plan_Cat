<?xml version="1.0" encoding="utf-8"?>
<!-- 보유 물품 배치 화면 -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AssignThingsActivity"
    android:background="@drawable/bgd_assign"
    android:orientation="vertical">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/x_btn"
        android:src="@drawable/x_button"
        android:layout_gravity="right|top"
        android:layout_margin="15dp"/>

    <ImageButton
        android:id="@+id/assign_location_1"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/button_assign_location_transparent" />

    <ImageButton
        android:id="@+id/assign_location_2"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@drawable/button_assign_location_transparent"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="70dp"/>
    <ImageButton
        android:id="@+id/assign_location_3"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@drawable/button_assign_location_transparent"
        android:layout_marginTop="385dp"
        android:layout_marginLeft="240dp"/>

    <ImageButton
        android:id="@+id/assign_location_4"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/button_assign_location_transparent" />

    <ImageButton
        android:id="@+id/assign_location_5"
        android:layout_width="120dp"
        android:layout_height="61dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="525dp"
        android:background="@drawable/button_assign_location_transparent" />


</FrameLayout>