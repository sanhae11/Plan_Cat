<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="25dp"
    android:background="@drawable/custom_layout_dialog_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="vertical"
        android:background="@drawable/custom_layout_dialog_header"
        android:padding="7dp">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="18dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="아직 고양이를 발견하지 못 했어요!"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/btn_check_white"
        android:src="@drawable/check_white"
        android:background="@drawable/custom_button_cat_dialog"
        android:layout_width="88dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:padding="7dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"/>

</LinearLayout>
