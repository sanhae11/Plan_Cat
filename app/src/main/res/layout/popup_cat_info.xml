<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="25dp"
    android:background="@drawable/custom_layout_dialog_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="vertical"
        android:background="@drawable/custom_layout_dialog_header"
        android:padding="7dp">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:gravity="center">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/cat_img"
            android:src="@drawable/cat_unknown"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_cat_name"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="길냥이"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_cat_description"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="안녕? 나는 길냥이야"/>
        </LinearLayout>
    </LinearLayout>
    <ImageButton
        android:id="@+id/btn_check_white"
        android:src="@drawable/check_white"
        android:background="@drawable/custom_button_cat_dialog"
        android:layout_width="88dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:padding="7dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"/>

</LinearLayout>

