<?xml version="1.0" encoding="utf-8"?>
<!-- 홈 화면 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="?android:attr/actionBarSize"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:id="@+id/btn"
            android:text="2020 02 02"
            android:letterSpacing="0.01"
            android:textSize="14dp"
            android:background="@drawable/custom_button_home_calender"
            android:layout_marginLeft="17dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            tools:targetApi="lollipop"
            android:clickable="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_goToday"
            android:text="go Today"/>
    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dailyTodoRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weekly" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/weeklyTodoRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monthly" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/monthlyTodoRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yearly" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/yearlyTodoRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>




</LinearLayout>