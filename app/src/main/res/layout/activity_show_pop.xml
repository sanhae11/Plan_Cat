<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_bg"
    tools:context=".ShowPopActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_calendar"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/image1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/explain1"
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:layout_marginLeft="5dp"
                android:text="설명설명설명설명설명설명설명설명설명설명설명설명설명설명설명설명설명설명설명설명설명설명설명설명설명설명설명설명설명"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="가격: 1000 EP"
                android:textColor="#000000"
                android:textSize="16dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="구매하시겠습니까?"
                android:textColor="#ffff4500"
                android:textSize="23dp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp">

            <Button
                android:id="@+id/buybtn"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="#ffadff2f"
                android:text="구매"
                android:gravity="center" />

            <Button
                android:id="@+id/cancelbtn"
                android:layout_toRightOf="@+id/buybtn"
                android:layout_marginLeft="30dp"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="#ffadff2f"
                android:text="취소"
                android:gravity="center" />
        </RelativeLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>